		</ee:transform>
		<logger level="INFO" doc:name="Logging response payload" doc:id="3972a3b0-3dec-4d55-9e34-10888d79a82f" message="#['Response payload - ' ++ write(payload,'application/json')]"/>
    </flow>
</mule>
